<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:id="@+id/activity_main"
    android:background="@drawable/backgroundgradient">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rlp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/textView2p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center_horizontal"
                    android:text="Contact urgență"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/numarp"
                    android:layout_below="@+id/textView2p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:ems="10"
                    android:inputType="phone"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView

                    android:id="@+id/textView3p"
                    android:textSize="24sp"
                    android:layout_below="@+id/numarp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Nume utilizator"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse" />

                <EditText
                    android:id="@+id/numeUtilizp"
                    android:layout_below="@+id/textView3p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:inputType="textPersonName"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                    android:textColor="@android:color/background_light"
                    android:textColorHighlight="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/textView9p"
                    android:layout_below="@+id/numeUtilizp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:text="Vârsta"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/varstap"
                    android:layout_below="@+id/textView9p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView11p"
                    android:layout_below="@+id/varstap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"


                    android:text="Grupa sanguină"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                    android:textSize="24sp"/>

                <RadioGroup
                    android:id="@+id/sangep"
                    android:layout_below="@+id/textView11p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                    android:textSize="24sp">

                    <RadioButton
                        android:id="@+id/op"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"

                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/ap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="A"

                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/bp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="B"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/abp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AB"

                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RadioGroup>
                <TextView
                    android:id="@+id/textView12p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sangep"
                    android:text="Rh"
                    android:gravity="center_horizontal"

                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <RadioGroup
                    android:id="@+id/RHp"
                    android:layout_below="@+id/textView12p"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"

                    android:layout_height="wrap_content"
                    >

                    <RadioButton
                        android:id="@+id/pozp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rh+"

                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/negp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rh-"

                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RadioGroup>


                <TextView
                    android:id="@+id/textView13p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RHp"
                    android:gravity="center_horizontal"


                    android:text="Sex"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
                <RadioGroup
                    android:id="@+id/sexp"
                    android:layout_below="@id/textView13p"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"

                    android:layout_height="wrap_content"
                    >

                    <RadioButton
                        android:id="@+id/fp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Feminin"

                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/mp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Masculin"

                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RadioGroup>
                <TextView
                    android:id="@+id/textView4p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sexp"
                    android:gravity="center_horizontal"
                    android:textSize="24sp"
                    android:text="Sarcină"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/textView14p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4p"
                    android:text="Medicamente folosite"
                    android:gravity="center_horizontal"

                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/medicamentep"
                    android:gravity="center_horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/textView14p"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/afecp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:layout_below="@+id/medicamentep"
                    android:text="Afecțiuni  cunoscute/ Alergii"
                    android:textColor="@color/white"
                    android:textSize="24sp" />



                <EditText
                    android:id="@+id/afectiunip"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/afecp"
                    android:gravity="center_horizontal"

                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="14sp" />




                <Button
                    android:id="@+id/editare"
                    style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"

                    android:layout_below="@id/afectiunip"
                    android:text="Editează"
                    android:textColor="@android:color/background_light" />



            </RelativeLayout>

        </ScrollView>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu"
        app:itemTextColor="@android:color/background_light"
        app:itemIconTint="@color/white"
        android:background="@drawable/backgroundgradient"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>