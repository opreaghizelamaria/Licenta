<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:id="@+id/activity_main"
    android:background="@drawable/backgroundgradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">


            <TextView
                android:id="@+id/textView2e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"
                android:text="Contact urgență"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/numare"
                android:layout_below="@+id/textView2e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:ems="10"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView

                android:id="@+id/textView3e"
                android:textSize="24sp"
                android:layout_below="@+id/numare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Nume utilizator"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse" />

            <EditText
                android:id="@+id/numeUtilize"
                android:layout_below="@+id/textView3e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textPersonName"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/textView9e"
                android:layout_below="@+id/numeUtilize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:text="Vârsta"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/varstae"
                android:layout_below="@+id/textView9e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:ems="10"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView11e"
                android:layout_below="@+id/varstae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"


                android:text="Grupa sanguină"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                android:textSize="24sp"/>

            <RadioGroup
                android:id="@+id/sangee"
                android:layout_below="@+id/textView11e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large.Inverse"
                android:textSize="24sp">

                <RadioButton
                    android:id="@+id/oe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"

                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/ae"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A"

                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/be"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/abe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AB"

                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RadioGroup>
            <TextView
                android:id="@+id/textView12e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sangee"
                android:text="Rh"
                android:gravity="center_horizontal"

                android:textColor="@color/white"
                android:textSize="24sp" />

            <RadioGroup
                android:id="@+id/RHe"
                android:layout_below="@+id/textView12e"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"

                android:layout_height="wrap_content"
                >

                <RadioButton
                    android:id="@+id/poze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rh+"

                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/nege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rh-"

                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RadioGroup>


            <TextView
                android:id="@+id/textView13e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RHe"
                android:gravity="center_horizontal"


                android:text="Sex"
                android:textColor="@color/white"
                android:textSize="24sp" />
            <RadioGroup
                android:id="@+id/sexe"
                android:layout_below="@id/textView13e"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"

                android:layout_height="wrap_content"
                >

                <RadioButton
                    android:id="@+id/fe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Feminin"

                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Masculin"

                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RadioGroup>
            <TextView
                android:id="@+id/textView4e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sexe"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:text="Sarcină"
                android:textColor="@color/white" />

            <Switch
                android:id="@+id/switch1e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4e"
                android:gravity="center_horizontal"

                android:text="Nu/Da"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/textView14e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/switch1e"
                android:text="Medicamente folosite"
                android:gravity="center_horizontal"

                android:textColor="@color/white"
                android:textSize="24sp" />

            <Switch
                android:id="@+id/mede"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView14e"
                android:gravity="center_horizontal"
                android:text="Nu/Da"
                android:textColor="@color/white" />
            <EditText
                android:id="@+id/medicamentee"
                android:gravity="center_horizontal"

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/mede"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/afece"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:layout_below="@+id/medicamentee"
                android:text="Afecțiuni  cunoscute/ Alergii"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Switch
                android:id="@+id/afecte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/afece"
                android:gravity="center_horizontal"
                android:text="Nu/Da"
                android:textColor="@color/white" />
            <EditText
                android:id="@+id/afectiunie"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/afecte"
                android:gravity="center_horizontal"

                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textSize="14sp" />




            <Button
                android:id="@+id/salvaree"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:layout_below="@id/afectiunie"
                android:text="Salvează"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/inapoi"
                style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
               android:layout_below="@+id/salvaree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Înapoi"
                android:textColor="@android:color/background_light" />


        </RelativeLayout>

    </ScrollView>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu"
        app:itemTextColor="@android:color/background_light"
        app:itemIconTint="@color/white"
        android:background="@drawable/backgroundgradient"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>